{>"/layouts/main"/}

{<title} Blog {/title}

{<class}blog{/class}

{<main} 

{?posts}
	{#posts}
		<article class="blog-post">
			{>"/blog/item"/}
			<footer>
				<a href="/blog/{url}"> View full article </a>
			</footer>
		</article>
		{@sep}
			<hr/>
		{/sep}
	{/posts}
{:else}
	<p> There are no posts in the blog. </p>

	<p> Go tell Raynos to blog more. </p>
{/posts}
<form action="/blog/new" method="get">
	<input type="submit" value="Add a new blog entry" />
</form>


{/main}